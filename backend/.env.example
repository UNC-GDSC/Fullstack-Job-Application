# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local development: mongodb://localhost:27017/job_applications_db
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/job_applications_db
MONGO_URI=mongodb://localhost:27017/job_applications_db

# Company Branding (Optional)
COMPANY_NAME=Your Company Name
COMPANY_LOGO_URL=https://example.com/logo.png

# CORS Configuration (Optional)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security (Optional)
# JWT Secret for authentication (if implementing auth)
JWT_SECRET=your-secret-key-here
JWT_EXPIRE=7d

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
